<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".zar_fali"
    android:background="@drawable/zar_arka_plan">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        app:srcCompat="@drawable/a" />

    <Button
        android:id="@+id/button"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#8A000000"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView5"
        android:layout_marginTop="25dp"
        android:text="BİR DİLEK TUTUN VE ZARLARI SALLAMAK İÇİN DOKUNUN." />

    <TextView
        android:id="@+id/textView"
        android:background="#77000000"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/imageView5"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button6"
        android:layout_centerInParent="true"
        android:text="Tekrar Fal Bakmak İster misiniz?"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#e9336d"
        android:layout_marginTop="60sp"
        android:visibility="invisible"
        android:gravity="center"
        />

    <Button
        android:id="@+id/button6"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#8A000000"

        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EVET"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/button7"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#8A000000"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="HAYIR"
        android:visibility="invisible" />

</RelativeLayout>